<h4> Player:</h4>

<!-- form for entering changes to the player fields based on existing field data -->
<form action="/players/<%=@player.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>First Name:</label>
  <input type=”text” name="firstname" value=<%=@player.firstname%>>
  <label>Last Name:</label>
  <input type=”text” name="lastname" value=<%=@player.lastname%>>
  <label>Position:</label>
  <input type=”text” name="position" value=<%=@player.position%>>
  <label>Owner/User ID</label>
  <input type=”text” name="user_id" value=<%=@player.user_id%>>

<!-- Button for submitting edited data back to the route which called it -->

  <input type="submit" value="submit">


</form>
