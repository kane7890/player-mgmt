<!-- List players on team belonging to user -->
<h2>Players on Team

  <!-- Get the current user -->
<%user=Helpers.current_user(session)%>

<!---Display the username  -->
<%=user.username%></h2>


<h3>Players</h3>
<!--Iterate throught the players-->
<%@players.each do |player|%>
  <h4> <%=player.firstname%> <%=player.lastname%>, <%=player.position%>

    <!--Include two buttons for editing player info and deleting player -->
    <form action="/players/<%=player.id%>/edit" method="get">
     <input type="submit" name="submit" value="Edit Player">


   </form>
   <form action="/players/<%=player.id%>" method="post">
     <input type="hidden" name="_method" value="delete">
     <input type="submit" value="Delete Player">
   </form>
 </h4>

  <%end%>
